  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "grunt serve",
    "build": "npm run build:dist",
    "build:dist": "grunt build && webpack --config config/webpack.config.dist.js --hide-modules --progress",
    "build:debug": "grunt build && webpack --config config/webpack.config.js --display-modules --sort-modules-by size --progress --hot",
    "dist": "ipfs add -r dist/",
    "publish": "npm run dist | tail -1 | grep -o Qm[a-zA-Z0-9]* | xargs ping-ops-requests -d orbit.chat -t 'Deploy new version of orbit-web' -h",
    "start": "cd dist && ../node_modules/.bin/http-server -c-1 -p 8081 & open http://localhost:8081/index.html & wait",
    "lint": "./node_modules/eslint/bin/eslint.js src/"
  }
